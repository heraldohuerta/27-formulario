<p id="notice"><%= notice %></p>


<%= form_with( model: @sale , local: true ) do |f| %>
<br><%= f.label :detail %>   <br> <%= f.text_area(:detail, size: '50x10') %>
<br><%= f.label :category %> <br> <%= f.text_field :category  , id: :category_content %>
<br><%= f.label :value %>    <br> <%= f.number_field :value  , id: :value_content %>
<br><%= f.label :discount%>  <br> <%= f.number_field :discount, min:1, max: 40   , id: :discount_content %>
<br> <spam>Exento de IVA</spam> <%= f.check_box :iva %>
<br>
<%= f.submit "Crear" %>
<% end %>
